#attractions-wrapper
  width 100vw
  height 100vh
  .update-box
    position fixed
    left 5px
    bottom 100px
    width 40px
    height 40px
    border-radius 50%
    background azure
    border 1px solid cornflowerblue
    display flex
    justify-content center
    align-items center
    .update-count
      font-size 14px
      color cornflowerblue
  .tabbar-box
    width 100vw
    height 50px
    background white
    position fixed
    top 0
    left 0
    z-index 2
    display flex
    justify-content space-around
    align-items center
    .box-content
      width 100%
      height 50px
      display flex
      justify-content center
      align-items center
      position relative
      .content-text
        font-size 16px
        color black
        font-weight 400
        &.active
          color cornflowerblue
      .select-line
        position absolute
        bottom 5px
        left 0
        right 0
        margin 0 auto
        width 50px
        height 2px
        border-radius 8px
        background white
        &.active
          background cornflowerblue
