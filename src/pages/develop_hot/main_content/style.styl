.main-wrapper
  width 100vw
  height auto
  overflow auto
  margin-top 18px
  display flex
  flex-direction column
  justify-content center
  align-items center
  .main-box
    padding: 17px 20px
    height 125px
    box-sizing border-box
    display flex
    justify-content space-between
    align-items center
    .box-left
      height 80px
      display flex
      flex-direction column
      justify-content space-between
      //align-items center
      .title-text
        width 160px
        text-overflow:ellipsis;
        display:-webkit-box;
        -webkit-line-clamp:2;
        -webkit-box-orient:vertical;
        overflow hidden
        font-size 16px
        color black
      .nick-box
        display box
        justify-content flex-start
        align-items center
        width 170px
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
        .nickname-text
          font-size 12px
          color rgba(0,0,0,.6)
        .nickname-text-t
          margin-left 6px
          font-size 12px
          color rgba(0,0,0,.6)
    .box-right
      width: 135px;
      //height: 89px;
      .news-image
        border-radius 6px
        width: 135px;
        height: 89px;
